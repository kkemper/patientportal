<div class ="row">
  <h1>Listing Vitals</h1>
  <div class="pull-right range-query">
    <%= form_tag vitals_path, method: :get do %>
    <%= text_field_tag 'search[date_from]',@search.date_from %>
    <%= text_field_tag 'search[date_to]',@search.date_to %>
    <%= submit_tag 'Search',class: 'btn search-button' %>
    <% end %>
  </div>
</div>
<div class =  "media">
 <div class = "media-body">
 <table class="table table-hover">
          <thead>
            <tr>
              <th>Date</th>
              <th>Patient ID</th>
              <th>Vital Type</th>
              <th>Vital value</th>
              <th>Physician ID</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @vitals.each do |vital| %>
              <tr>
                <td><%= vital.date %></td>
                <td><%= vital.Patient_ID %></td>
                <td><%= vital.vital_type %></td>
                <td><%= vital.Vital_Value %></td>
                <td><%= vital.physician_id %></td>
                <td><%= link_to 'Show', vital,class:'btn btn-mini' %></td>
                <td><%= link_to 'Edit', edit_vital_path(vital),class:'btn btn-mini btn-success' %></td>
                <td><%= link_to 'Delete', vital, method: :delete,class:'btn btn-mini btn-danger' ,data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

  </div>
  </div>
<br>

<%= link_to 'New Vital', new_vital_path %>
