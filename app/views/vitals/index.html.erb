<p id="notice"><%= notice %></p>

<h1>Listing Vitals</h1>
<div class ="media">
  <div class ="media body">

<table class ="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Patient id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vitals.each do |vital| %>
      <tr>
        <td><%= vital.date %></td>
          <td><%= link_to 'Show', vital %></td>
        <td><%= link_to 'Edit', edit_vital_path(vital) %></td>
        <td><%= link_to 'Destroy', vital, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>

<br>

