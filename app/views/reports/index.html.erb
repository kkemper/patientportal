<p id="notice"><%= notice %></p>

<h1>Reports</h1>


<div class =  "media">
 <div class = "media-body">
 <table class="table table-hover">
 <thead>
   <tr>
     <th>Date</th>
     <th>Report</th>
     <th colspan="3"></th>
   </tr>
   </thead>
  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.Date %></td>
        <td><%= report.Report %></td>
        <td><%= link_to 'Show', report,class:'btn btn-mini' %></td>
        <td><%= link_to 'Edit', edit_report_path(report),class:'btn btn-mini btn-success' %></td>
        <td><%= link_to 'Delete', report,  method: :delete,class:'btn btn-mini btn-danger' ,data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
          </tbody>
        </table>
  </div>
</div>
<br>

<%= link_to 'New Report', new_report_path %>
