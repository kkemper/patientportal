<p id="notice"><%= notice %></p>

<h1>Bills</h1>
<div class =  "media">
 <div class = "media-body">
 <table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Reason</th>
      <th>Hospital</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @billings.each do |billing| %>
      <tr>
        <td><%= billing.Date %></td>
        <td><%= billing.Reason %></td>
        <td><%= billing.Hospital %></td>
        <td><%= billing.Status %></td>
        <td><%= link_to 'Show', billing,class:'btn btn-mini' %></td>
        <td><%= link_to 'Edit', edit_billing_path(billing),class:'btn btn-mini btn-success' %></td>
        <td><%= link_to 'Delete', billing, method: :delete,class:'btn btn-mini btn-danger' ,data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
          </tbody>
        </table>

  </div>
  </div>
<br>

<%= link_to 'New Billing', new_billing_path %>
